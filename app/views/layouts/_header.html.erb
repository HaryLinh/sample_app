<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to  t("static_page.home.sample"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_page.home.title"), "#" %></li>
        <li><%= link_to t("static_page.help.title"), "#" %></li>
        <li><%= link_to t("static_page.about.title"), "#" %></li>
          <% if logger_in? %>
            <li><%= link_to t("user.users"), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "static_page.home.account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("user.profile"), current_user %></li>
                <li><%= link_to t("user.settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t("static_page.home.logout"), logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("static_page.home.login"), login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
